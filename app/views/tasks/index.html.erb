<h1>My Tasks</h1>


<ul class="list-group">
  <% @tasks.each do |task| %>
      <li class="list-group-item">
        <% task.completed ? checked = "checked" : checked = "" %>
        <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash-alt" id="delete">  </i>


        <% end %>

        &nbsp <input type="checkbox" value="completed" <%= checked %>>
        &nbsp <%= link_to task.title , task_path(task)  %>
      </li>
  <% end %>
</ul>

<hr>
<%= link_to tasks_new_path do %>
  <i class="fas fa-plus"></i> Add a new Task
<% end %>
